namespace Utils {

function sentence(str) {
	if (str.length == 0)
		return str;
	if (str.length == 1)
		return str.toUpperCase();
	return str.substr(0, 1).toUpperCase() + str.substr(1);
}

function callback(obj, func) {
	const f = function(args...) {
		return func.apply(obj, args);
	};
	return f;
}

}
