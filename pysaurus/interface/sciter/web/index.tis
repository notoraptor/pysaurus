event ready {
    const (sx, sy, sw, sh) = view.screenBox(#workarea, #rectw);
    const width = 1200;
    const height = 720;
    const x = (sw - width) / 2;
    const y = (sh - height) / 2;
    view.move(x, y, width, height);
}
event closerequest {
    // TODO Should wait for all threads (including in Python side) to terminate before closing window.
    stdout.println('Window required to close.');
    view.close_app();
}
